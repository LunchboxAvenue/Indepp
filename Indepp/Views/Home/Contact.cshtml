@model Indepp.ViewModels.EmailMessage
@{
    var messageSent = TempData["MessageSent"];
}

<div class="container-fluid">
    <div class="row paperBody">
        <div class="col-lg-12">
            <a href="#menu-toggle" id="menu-toggle">
                <i class="fa fa-long-arrow-left"></i>
            </a>

            <h1 class="specialHeaderText">@ViewBag.PageTitle</h1>

            <p class="underHeaderText">
                Might not be needed exactly as it looks now
            </p>
        </div>

        <!-- Main Content -->
        <div class="col-lg-6">
            <section>
                @if (messageSent != null)
                {
                    <h3>@messageSent.ToString()</h3>
                }

                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    <div class="editSection">
                        <label>Use this for to write us an email</label>
                        <div class="input-group">
                            <span class="input-group-addon">Name</span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Name)
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Email</span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Email)
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Subject</span>
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => Model.Subject)
                        </div>
                    </div>

                    <div class="editSection">
                        <label>Message</label>
                        <div class="input-group">
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = 5 })
                            @Html.ValidationMessageFor(m => Model.Message)
                        </div>
                    </div>

                    <div class="editSection">
                        <button type="submit" class="btn btn-link">
                            <i class="fa fa-paper-plane fa-2x"></i>
                        </button>
                    </div>
                }
            </section>
        </div>
        <div class="col-lg-6">
            <h2>Contacts</h2>
            <p>
                You can send us an email to "user@example.com"<br />
                Call us on: +00 000000
            </p>
        </div>
        <!-- Main Content Ends-->

    </div>
</div>