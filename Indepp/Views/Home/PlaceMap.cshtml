@model PagedList.IPagedList<Indepp.Models.Place>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=true"></script>

<div class="container-fluid">
    <div class="row paperBody">
        <div class="col-lg-12">
            <a href="#menu-toggle" id="menu-toggle">
                <i class="fa fa-long-arrow-left"></i>
            </a>

            <h1 class="specialHeaderText">Place Map</h1>

            <p class="underHeaderText">
                Use the map to find what you up for today
            </p>

            <!--<p>Make sure to keep all page content within the <code>#page-content-wrapper</code>.</p>-->
        </div>

        <!-- Main Content -->
        <div class="col-md-8">
            <section id="placeList">
                <h2 class="uppercaseText">filters go under</h2>

                @using (Html.BeginForm("PlaceMap", "Home", FormMethod.Get))
                {
                    <p>
                        Filter by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                        <input type="submit" class="btn btn-default" value="Search" />
                    </p>
                }

                <div id="placesMap" style="height: 500px;"></div>
            </section>
        </div>
        <!-- Main Content Ends-->
        <!-- Will be a partial later on -->
        <div class="col-md-4 recentPosts">
            <h2 class="uppercaseText">Recent posts</h2>

            <p>Single origin saucer cappuccino doppio robusta crema single shot.</p>
            <p>Roast, aromatic, white black java medium extra.</p>
            <p>Blue mountain mug, redeye, flavour extraction lungo cream aromatic grounds body cappuccino.</p>
        </div>
        <!-- Partial will end here-->

    </div>
</div>

@Scripts.Render("~/bundles/placemap")