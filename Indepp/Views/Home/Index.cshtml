@model PagedList.IPagedList<Indepp.Models.BlogPost>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="container-fluid">
    <div class="row paperBody">
        <div class="col-lg-12">
            <a href="#menu-toggle" id="menu-toggle" style="position: absolute; top: 10px;">
                <i class="fa fa-long-arrow-left"></i>
            </a>

            <h1 class="specialHeaderText">@ViewBag.PageTitle</h1>

            <p class="underHeaderText">
                Blog posts. 
            </p>
        </div>

        <!-- Main Content -->
        <div class="col-md-8">
            <section id="blogPostList">
                <table class="table table-hover">
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Title
                        <th>
                            Description
                        </th>
                        <th>
                            Post on
                        </th>
                    </tr>

                    @foreach (var blogPost in Model)
                    {
                        <tr>
                            <td>
                                @blogPost.ID
                            </td>
                            <td>
                                @blogPost.Title
                            </td>
                            <td>
                                @blogPost.ShortDescription
                            </td>
                            <td>
                                @blogPost.PostedOn
                            </td>
                        </tr>
                    }
                </table>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

            </section>
        </div>
        <!-- Main Content Ends-->
        <!-- Will be a partial later on -->
        <div class="col-md-4 recentPosts">
            <h2 style="text-transform:uppercase">Recent posts</h2>

            <p>Single origin saucer cappuccino doppio robusta crema single shot.</p>
            <p>Roast, aromatic, white black java medium extra.</p>
            <p>Blue mountain mug, redeye, flavour extraction lungo cream aromatic grounds body cappuccino.</p>
        </div>
        <!-- Partial will end here-->

    </div>
</div>
