@model Indepp.Models.Place

<div class="container-fluid">
    <div class="row paperBody">
        <div class="col-lg-12">
            <a href="#menu-toggle" id="menu-toggle">
                <i class="fa fa-long-arrow-left"></i>
            </a>

            <h1 class="specialHeaderText">@Model.Name</h1>

            <p class="underHeaderText">
                Not sure if this will stay here.
            </p>
        </div>

        <!-- Main Content -->
        <div class="col-md-8">
            <section id="placeDetails">
                <div>
                    <h1>
                        PLACE DETAILS
                    </h1>
                    <p>
                        @Model.ID
                    </p>
                    <p>
                        @Model.Name
                    </p>
                    <p>
                        @Model.Category
                    </p>
                </div>
            </section>
        </div>
        <!-- Main Content Ends-->

        <div class="col-md-4 recentPosts">
            <h2 style="text-transform:uppercase">Opening Times</h2>

            <p>Mon: </p>
            <p>Tue: </p>
            <p>Wed: </p>

        </div>

    </div>
</div>